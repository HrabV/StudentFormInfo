@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container w-50">

    <form method="POST">
        <div class="form-group">
            <label asp-for="Student.Surname"></label>
            <input type="text" asp-for="Student.Surname" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Student.Name"></label>
            <input type="text" asp-for="Student.Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Student.Patronomic"></label>
            <input type="text" asp-for="Student.Patronomic" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Student.Bday" ></label>
            <input type="date" asp-for="Student.Bday" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Student.City"></label>
            <input type="text" asp-for="Student.City" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Student.Gender"></label>
            <div class="form-check">
                <input class="form-check-input" type="radio" asp-for="Student.Gender" checked value="Man"/><label class="form-check-label">
                    Man
                </label>
            </div><div class="form-check">
                <input class="form-check-input" type="radio" asp-for="Student.Gender" value="Women"/><label class="form-check-label">
                    Woman
                </label>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Student.Phone"></label>
            <input type="text" asp-for="Student.Phone" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Student.Email"></label>
            <input type="text" asp-for="Student.Email" class="form-control" />
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </form>
</div>
